// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "webpack-dev",
			"problemMatcher": {
				"owner": "webpack",
				"severity": "error",
				"fileLocation": "relative",
				"pattern": [
					{
						"regexp": "ERROR in[\\s]+([^:]*):(\\d+):(\\d+)",
						"file": 1,
						"line": 2,
						"column": 3
					},
					{
						"regexp": "TS(.*)",
						"message": 1
					},
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": {
						"regexp": "\\[webpack-cli\\][\\s]+Compilation starting[\\.]*"
					},
					"endsPattern": {
						"regexp": "\\[webpack-cli\\][\\s]+watching files for updates[\\.]*"
					}
				}
			},
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}