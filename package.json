{
  "name": "cha0s2nd-vscode-cds",
  "displayName": "CDS Tools (CRM Dynamics 365)",
  "description": "Tools to assist in developing custom solutions in CRM",
  "publisher": "Cha0s2nd",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/cds-tools.json",
    "onCommand:cha0s2nd-vscode-cds.auth.login"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "commandPalette": [
        {
          "command": "cha0s2nd-vscode-cds.webresource.deploy",
          "when": "resourceLangId == javascript || resourceLangId == typescript"
        }
      ],
      "explorer/context": [
        {
          "command": "cha0s2nd-vscode-cds.webresource.deploy",
          "group": "z_commands",
          "when": "resourceLangId == javascript || resourceLangId == typescript"
        },
        {
          "command": "cha0s2nd-vscode-cds.webresource.deployAll",
          "group": "z_commands",
          "when": "resourceFilename == cds-tools.json"
        }
      ],
      "editor/title": [
        {
          "command": "cha0s2nd-vscode-cds.webresource.deploy",
          "group": "navigation",
          "when": "resourceLangId == javascript || resourceLangId == typescript"
        }
      ],
      "editor/title/context": [
        {
          "command": "cha0s2nd-vscode-cds.webresource.deploy",
          "group": "z_commands",
          "when": "resourceLangId == javascript || resourceLangId == typescript"
        }
      ],
      "editor/context": [
        {
          "command": "cha0s2nd-vscode-cds.webresource.deploy",
          "group": "z_commands",
          "when": "resourceLangId == javascript || resourceLangId == typescript"
        }
      ],
      "view/item/context": [
        {
          "command": "cha0s2nd-vscode-cds.webresource.deploy",
          "group": "z_commands",
          "when": "resourceLangId == javascript || resourceLangId == typescript"
        }
      ]
    },
    "configuration": [
      {
        "title": "CDS Tools",
        "properties": {
          "cha0s2nd-vscode-cds.auth.sampleSetting": {
            "title": "Sample Setting",
            "type": "string",
            "default": "This is a sample value",
            "scope": "resource"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "cha0s2nd-vscode-cds.auth.login",
        "title": "Login",
        "category": "CDS Auth"
      },
      {
        "command": "cha0s2nd-vscode-cds.auth.logout",
        "title": "Logout",
        "category": "CDS Auth"
      },
      {
        "command": "cha0s2nd-vscode-cds.auth.discoveryToken.set",
        "title": "Configure Discovery Token",
        "category": "CDS Auth"
      },
      {
        "command": "cha0s2nd-vscode-cds.auth.organizationToken.set",
        "title": "Configure Organization Token",
        "category": "CDS Auth"
      },
      {
        "command": "cha0s2nd-vscode-cds.organization.change",
        "title": "Change",
        "category": "CDS Organization"
      },
      {
        "command": "cha0s2nd-vscode-cds.solution.change",
        "title": "Change",
        "category": "CDS Solution"
      },
      {
        "command": "cha0s2nd-vscode-cds.webresource.deploy",
        "title": "Deploy",
        "category": "CDS Web Resources",
        "icon": {
          "light": "media/light/upload.png",
          "dark": "media/dark/upload.png"
        }
      },
      {
        "command": "cha0s2nd-vscode-cds.webresource.deployAll",
        "title": "Deploy All",
        "category": "CDS Web Resources"
      },
      {
        "command": "cha0s2nd-vscode-cds.webresource.download",
        "title": "Download and Map",
        "category": "CDS Web Resources"
      },
      {
        "command": "cha0s2nd-vscode-cds.solution.importManaged",
        "title": "Import as Managed",
        "category": "CDS Solution"
      },
      {
        "command": "cha0s2nd-vscode-cds.solution.importUnManaged",
        "title": "Import as Unmanaged",
        "category": "CDS Solution"
      },
      {
        "command": "cha0s2nd-vscode-cds.solution.export",
        "title": "Export",
        "category": "CDS Solution"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "request": "2.88.0",
    "request-promise": "4.2.5",
    "node-uuid": "^1.4.8",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/vscode": "^1.14.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/request-promise": "^4.1.41",
    "@types/node-uuid": "^0.0.28",
    "@types/xml2js": "^0.4.5",
    "eslint": "^7.9.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  }
}
